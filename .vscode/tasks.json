// .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-cpp",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "introduction/main.cpp",
        "introduction/math.cpp",
        "-o",
        "main.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
     {
      "label": "build active file",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "cleanup-executable",
      "type": "shell",
      "command": "del /Q \"${fileDirname}/${fileBasenameNoExtension}.exe"
    }
  ]
}
